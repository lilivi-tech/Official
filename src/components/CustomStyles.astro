---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    /* 优先中文系统字体，其次英文可变字体 */
    --aw-font-sans: 'Source Han Sans SC', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'WenQuanYi Micro Hei', 'Inter Variable', system-ui, -apple-system, 'SF Pro Display', Segoe UI, Roboto, Helvetica, Arial, sans-serif;
    --aw-font-serif: 'Source Han Sans SC', 'Songti SC', 'STSong', 'Inter Variable', ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
    --aw-font-heading: 'Source Han Sans SC', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Inter Variable', system-ui, -apple-system, 'SF Pro Display', Segoe UI, Roboto, Helvetica, Arial, sans-serif;

    /* Lilivi 品牌主色 */
    --aw-color-primary: #B39CFF; /* 品牌主紫 */
    --aw-color-secondary: #A296D9; /* 深紫/辅助 */
    --aw-color-accent: #A296D9;

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 64%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection { background-color: rgba(179, 156, 255, 0.35); color: #0b0b0b; }
  }

  .dark {
    --aw-font-sans: 'Source Han Sans SC', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'WenQuanYi Micro Hei', 'Inter Variable', system-ui, -apple-system, 'SF Pro Display', Segoe UI, Roboto, Helvetica, Arial, sans-serif;
    --aw-font-serif: 'Source Han Sans SC', 'Songti SC', 'STSong', 'Inter Variable', ui-serif, Georgia, Cambria, "Times New Roman", Times, serif;
    --aw-font-heading: 'Source Han Sans SC', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Inter Variable', system-ui, -apple-system, 'SF Pro Display', Segoe UI, Roboto, Helvetica, Arial, sans-serif;

    --aw-color-primary: #B39CFF;
    --aw-color-secondary: #A296D9;
    --aw-color-accent: #A296D9;

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 68%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection { background-color: rgba(179, 156, 255, 0.35); color: #ffffff; }
  }
</style>
