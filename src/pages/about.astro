---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: '关于我们',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="关于我们"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      以创意与技术，打造<br />
      <span class="text-accent dark:text-white"> 有温度的数字体验</span>
    </Fragment>

    <Fragment slot="subtitle">
      我们将 AI 与游戏的创造力相融合，让科技不再冰冷。通过稳健的工程与精致的设计，为品牌与个人提供高效、可持续的建站与体验解决方案。
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="关于我们的数字"
    stats={[
      { title: '办公室', amount: '4' },
      { title: '成员', amount: '48+' },
      { title: '组件/模板', amount: '120+' },
      { title: '奖项/认可', amount: '24' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="我们在做什么"
    subtitle="以模块化组件与最佳实践为核心，快速构建既美观又高性能的网站与产品体验。"
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: '品牌与官网',
        description:
          '以品牌调性为核心的官网设计与开发，强调可读性、转化与增长。',
        icon: 'tabler:template',
      },
      {
        title: '产品站点',
        description:
          '面向产品/服务的营销落地页与文档系统，覆盖定价、案例与常见问题。',
        icon: 'tabler:template',
      },
      {
        title: '博客与内容',
        description:
          '关注内容生产与分发的写作体验：MD/MDX、多语言、分类与标签。',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: '高性能',
        description:
          '基于 Astro 的按需加载与服务端渲染能力，默认即高分性能与 SEO。',
        icon: 'tabler:template',
      },
      {
        title: '可维护',
        description:
          '清晰的项目结构与组件化策略，降低维护成本，支持持续迭代。',
        icon: 'tabler:template',
      },
      {
        title: '易扩展',
        description:
          '支持多语言、博客系统、分析与图像优化等特性，按需接入。',
        icon: 'tabler:template',
      },
      {
        title: '品牌一致性',
        description:
          '通过变量与主题系统，快速对齐品牌色、字体与交互细节。',
        icon: 'tabler:template',
      },
      {
        title: '可访问性',
        description:
          '注重可访问性与键盘交互，保证不同设备与人群都能友好使用。',
        icon: 'tabler:template',
      },
      {
        title: '可观测性',
        description:
          '内置分析与日志埋点，支持关键行为追踪，辅助后续优化。',
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Colorful Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="我们的价值观"
    subtitle="科技应当温柔，而非冰冷。保持开放、协作与持续改进，构建可持续的产品与生态。"
    items={[
      {
        title: '以人为本',
        description:
          '尊重用户情绪与期待，在每一个细节里保持温度与确定性。',
      },
      {
        title: '持续改进',
        description:
          '拥抱变化与反馈，快速试错与优化，保持产品生命力。',
      },
      {
        title: '伦理与责任',
        description:
          '在数据、算法与体验的每一环，保持透明、公平与责任。',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="里程碑"
    subtitle="我们在不断演进中实现更好的体验与更快的交付。"
    isReversed={true}
    callToAction={{
      text: '了解更多',
      href: '/blog',
    }}
    items={[
      {
        title: '多语言支持',
        description: '提供中英文页面切换与内容管理能力，轻松触达全球用户。',
        icon: 'tabler:globe',
      },
      {
        title: '用户口碑',
        description:
          '来自社区与客户的积极反馈，推动我们不断改进。',
        icon: 'tabler:message-star',
      },
      {
        title: '行业认可',
        description:
          '在性能、体验与可访问性方面持续获得认可。',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="我们在哪里"
    tagline="Find us"
    columns={4}
    items={[
      {
        title: '中国',
        description: '厦门',
      },
      {
        title: '新加坡',
        description: '即将开放',
      },
      {
        title: '北美',
        description: '远程办公',
      },
      {
        title: '欧洲',
        description: '远程办公',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="技术与支持"
    tagline="Contact us"
    columns={2}
    items={[
      {
        title: '联系我们',
        description:
          '有任何想法或合作需求，欢迎通过邮箱与我们取得联系：support@lilivi.com',
        icon: 'tabler:messages',
      },
      {
        title: '加入我们',
        description:
          '热爱 AI、游戏与创造力？欢迎加入我们，共创有温度的产品。',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
