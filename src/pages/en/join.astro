---
import PageLayout from '~/layouts/PageLayout.astro';
import { headerData as headerEn, footerData as footerEn } from '~/navigation.en';

const metadata = { title: 'Join Us - Lilivi', description: 'Young · Creative · Warm · Tech' };
---

<PageLayout metadata={metadata} lang="en" headerOverride={headerEn} footerOverride={footerEn}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 max-w-4xl">
    <h1 class="text-4xl font-heading font-bold mb-4">Join Us</h1>
    <p class="text-muted">We believe technology should be gentle, not cold. Welcome creators passionate about AI, games and imagination.</p>
    <ul class="mt-8 space-y-4">
      <li class="p-5 rounded-lg border border-gray-200 dark:border-gray-700">
        <h3 class="font-semibold">Product Designer / Frontend Engineer</h3>
        <p class="text-muted text-sm mt-1">UX and motion-focused, familiar with modern frontend and design systems.</p>
      </li>
      <li class="p-5 rounded-lg border border-gray-200 dark:border-gray-700">
        <h3 class="font-semibold">Gameplay / AI Engineer</h3>
        <p class="text-muted text-sm mt-1">Enthusiastic about interaction and agents, exploring AI × Game.</p>
      </li>
    </ul>
  </section>
</PageLayout>

