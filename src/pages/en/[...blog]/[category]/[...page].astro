---
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogCategoryRobots, getStaticPathsBlogCategoryByLang } from '~/utils/blog';

import PageLayout from '~/layouts/PageLayout.astro';
import BlogList from '~/components/blog-en/ListEn.astro';
import Headline from '~/components/blog/Headline.astro';
import Pagination from '~/components/blog/Pagination.astro';
import { headerData as headerEn, footerData as footerEn } from '~/navigation.en';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  return await getStaticPathsBlogCategoryByLang({ paginate }, 'en');
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths> & { category: Record<string, string> };

const { page, category } = Astro.props as Props;
const currentPage = page.currentPage ?? 1;

const metadata = {
  title: `Category '${category.title}' ${currentPage > 1 ? ` â€” Page ${currentPage}` : ''}`,
  robots: { index: blogCategoryRobots?.index, follow: blogCategoryRobots?.follow },
};
---

<PageLayout metadata={metadata} lang="en" headerOverride={headerEn} footerOverride={footerEn}>
  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline>{category.title}</Headline>
    <BlogList posts={page.data} />
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
  </section>
</PageLayout>

