---
import PageLayout from '~/layouts/PageLayout.astro';
import { headerData as headerEn, footerData as footerEn } from '~/navigation.en';
import Button from '~/components/ui/Button.astro';

const metadata = { title: 'Play - Lilivi', description: 'Play: Instant fun with AI opponents' };
---

<PageLayout metadata={metadata} lang="en" headerOverride={headerEn} footerOverride={footerEn}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 max-w-4xl">
    <h1 class="text-4xl font-heading font-bold mb-4">Play</h1>
    <p class="text-muted">Jump into immersive interactions anytime, backed by AI opponents.</p>
    <div class="mt-8 rounded-xl p-8 bg-lilivi-gradient text-white">
      <h2 class="text-2xl font-bold mb-3">Coming soon</h2>
      <p class="opacity-90 mb-5">We are polishing the best experience for you.</p>
      <Button variant="liquid" href="/en/contact">Notify me</Button>
    </div>
  </section>
</PageLayout>
