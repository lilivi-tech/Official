---
import PageLayout from '~/layouts/PageLayout.astro';
import { headerData as headerEn, footerData as footerEn } from '~/navigation.en';
import Button from '~/components/ui/Button.astro';

const metadata = { title: 'Products - Lilivi', description: 'Explore Lilivi Play and Studio' };
---

<PageLayout metadata={metadata} lang="en" headerOverride={headerEn} footerOverride={footerEn}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 max-w-5xl">
    <h1 class="text-4xl font-heading font-bold mb-6">Products</h1>
    <p class="text-muted mb-10">Explore Liliviâ€™s two core experiences: Play and Studio.</p>
    <div class="grid gap-6 sm:grid-cols-2">
      <div class="rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:border-primary transition">
        <h2 class="text-2xl font-bold mb-2">Play</h2>
        <p class="text-muted mb-5">Instant fun with AI opponents and interactive challenges.</p>
        <Button variant="liquid" href="/en/products/play">Try Play</Button>
      </div>
      <div class="rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:border-primary transition">
        <h2 class="text-2xl font-bold mb-2">Studio</h2>
        <p class="text-muted mb-5">Creative AI tools to turn ideas into results quickly.</p>
        <Button variant="liquid" href="/en/products/studio">Explore Studio</Button>
      </div>
    </div>
  </section>
</PageLayout>
