---
import PageLayout from '~/layouts/PageLayout.astro';
import { headerData as headerEn, footerData as footerEn } from '~/navigation.en';

const metadata = { title: 'Thank you — Lilivi', description: 'We have received your message and will respond soon.' };
---

<PageLayout metadata={metadata} lang="en" headerOverride={headerEn} footerOverride={footerEn}>
  <section class="px-4 py-24 sm:px-6 mx-auto lg:px-8 max-w-3xl text-center">
    <h1 class="text-3xl sm:text-4xl font-heading font-bold mb-3">Thank you for your message</h1>
    <p class="text-muted">We’ve received your information and will get back within 24 hours.</p>
    <div class="mt-8">
      <a href="/en" class="inline-flex items-center px-5 py-3 rounded-lg bg-primary text-white">Back to Home</a>
    </div>
  </section>
</PageLayout>

