---
import Layout from '~/layouts/PageLayout.astro';

const metadata = { title: '感谢你的留言 - Lilivi', description: '我们已收到你的信息，会尽快联系你。' };
---

<Layout metadata={metadata}>
  <section class="px-4 py-24 sm:px-6 mx-auto lg:px-8 max-w-3xl text-center">
    <h1 class="text-3xl sm:text-4xl font-heading font-bold mb-3">感谢你的留言</h1>
    <p class="text-muted">我们已收到你的信息，会在 24 小时内回复你。</p>
    <div class="mt-8">
      <a href="/" class="inline-flex items-center px-5 py-3 rounded-lg bg-primary text-white">返回首页</a>
    </div>
  </section>
</Layout>
