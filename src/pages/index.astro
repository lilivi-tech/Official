---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Pricing from '~/components/widgets/Pricing.astro';

const metadata = {
  title: 'Lilivi — 用科技，点亮生活的温度',
  description:
    'Lilivi 致力于用 AI 与游戏的力量，让科技更具人文温度，让创造力回归生活。AI × Game × Creativity',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      { text: '探索产品', href: '/products', variant: 'liquid' },
      { text: '立即体验', href: '/products/play', variant: 'liquid' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Lilivi Hero Image' }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-lilivi-gradient"></div>
    </Fragment>

    <Fragment slot="title">
      用科技，点亮生活<span class="text-warm-light">的温度。</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">AI × Game × Creativity</span>
      <span class="block">让创造力回归生活，让科技更具人文温度。</span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="品牌理念" description="简洁 · 最佳实践 · 高性能 · 有温度的科技" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="特性"
    title="Lilivi 的核心优势"
    subtitle="AI × Game × Creativity：轻盈、快速、可自定义，打造有温度的体验。"
    items={[
      {
        title: 'Astro + Tailwind 一体化',
        description: '现代静态/混合站点与原子化样式的高效组合，性能与效率兼得。',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: '即取即用的组件',
        description: '覆盖 Hero、功能、价格、页脚等常用模块，按需组合快速搭建。',
        icon: 'tabler:components',
      },
      {
        title: '最佳实践与可维护性',
        description: '良好结构与 SEO/可访问性实践，保障长期可迭代。',
        icon: 'tabler:list-check',
      },
      {
        title: '卓越的加载速度',
        description: '默认即高分的性能体验，助力更好的搜索与转化。',
        icon: 'tabler:rocket',
      },
      {
        title: 'SEO 友好',
        description: '内置元数据与 OG 图优化，助力内容触达更多受众。',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: '开放与协作',
        description: '欢迎新想法与贡献，持续共创更好的产品体验。',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="产品内核"
    title="有温度的技术蓝图"
    items={[
      {
        title: 'Built on top of Astro 5.0',
        description:
          'Benefiting from the performance and developer-friendly features of this modern static site generator.',
      },
      {
        title: 'Styled using Tailwind CSS',
        description:
          'Facilitating rapid design and consistent styling with this highly popular utility-first CSS framework.',
      },
      {
        title: 'Cross-browser compatibility',
        description:
          'Ensure your website looks and functions consistently across various web browsers, delivering a seamless experience to all users.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">建立在现代化基础之上</h3>
      采用行业领先实践，获得持久的竞争优势
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'High level of customization',
        description: `Tailor the template effortlessly to match your brand's identity and requirements, making your website distinct and saving you time.`,
      },
      {
        title: 'Multiple layout possibilities',
        description:
          'Explore various layout options to find the structure that best presents your content, enhancing user engagement and navigation.',
      },
      {
        title: 'Fully responsive design',
        description:
          "Ensure your website's optimal performance on various devices and screen sizes, providing a consistent and enjoyable user experience.",
      },
      {
        title: 'Integration of media',
        description:
          'Seamlessly incorporate images, videos, and multimedia elements that enhance your content and engage visitors effectively.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">让你的在线形象真正体现品牌气质。</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Enhanced user engagement',
        description:
          'Captivate your audience with interactive elements, intuitive navigation, and visually appealing layouts, encouraging longer visits.',
      },
      {
        title: 'Continuous improvement',
        description:
          'Ensure your website stays aligned with the latest trends and technologies through regular updates and enhancements.',
      },
      {
        title: 'Time and resource efficiency',
        description:
          'Skip the time-consuming process of building a website from scratch and launch your online presence sooner with AstroWind.',
      },
      {
        title: 'Community support',
        description: `Join the growing AstroWind community for insights, resources, and assistance, ensuring you're never alone on your web development journey.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">为增长与成功而设计。</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="用 Lilivi 快速搭建你的理想网站"
    items={[
      {
        title: '步骤 1：<span class="font-medium">获取模板</span>',
        description: '从 GitHub 获取或使用模板，一键开始你的创意画布。',
        icon: 'tabler:package',
      },
      {
        title: '步骤 2：<span class="font-medium">添加内容</span>',
        description: '填充图片与文案，让你的故事鲜活起来。',
        icon: 'tabler:letter-case',
      },
      {
        title: '步骤 3：<span class="font-medium">自定义样式</span>',
        description: '调整颜色、字体与布局，注入你的品牌气质。',
        icon: 'tabler:paint',
      },
      {
        title: '完成！',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="常用组件"
    subtitle="覆盖大多数官网/产品站点搭建需求"
    tagline="组件库"
    items={[
      {
        title: '页头',
        description: '导航清晰即方向明确。',
        icon: 'flat-color-icons:template',
      },
      {
        title: '主视觉',
        description: '第一印象决定心智锚点。',
        icon: 'flat-color-icons:gallery',
      },
      {
        title: '功能',
        description: '清晰传达产品价值与能力。',
        icon: 'flat-color-icons:approval',
      },
      {
        title: '内容',
        description: '内容即王道，承载价值表达。',
        icon: 'flat-color-icons:document',
      },
      {
        title: '行动召唤',
        description: '引导用户完成关键动作，提升转化。',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: '价格',
        description: '清晰方案与权益，降低决策成本。',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: '证言',
        description: '社会认同，建立信任与说服力。',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: '联系',
        description: '多通道触达与反馈，建立连接。',
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: '页脚',
        description: '极简而有用的收尾与导航。',
        icon: 'flat-color-icons:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="阅读我们的最新文章"
    information={`分享关于 AI、游戏与创造力的思考与实践，
                        关注产品更新、设计理念与技术实现，为你带来灵感与方法。
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="常见问题"
    subtitle="了解 Lilivi 的能力与使用方式，快速找到你关心的问题答案。"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      { title: '为什么选择 Lilivi？', description: '我们将 AI 与游戏的创造力结合，以温暖的方式服务真实场景。' },
      { title: '如何开始？', description: '访问产品页选择 Play 或 Studio，按照指引体验与上手。' },
      { title: '是否支持移动端？', description: '默认支持响应式布局，在主流设备上均可获得良好体验。' },
      { title: '是否支持暗色主题？', description: '支持，右上角可切换主题。' },
      { title: '如何获取内测资格？', description: '可通过联系我们或关注博客公告获取最新信息。' },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: '下载', amount: '132K' },
      { title: '关注', amount: '24.8K' },
      { title: '复刻', amount: '10.3K' },
      { title: '用户', amount: '48.4K' },
    ]}
  />

  <!-- Pricing Widget *************** -->
  <Pricing
    title="价格方案"
    subtitle="灵活选择，立即开启你的创意之旅"
    tagline="Pricing"
    prices={[
      {
        title: '免费',
        subtitle: '适合个人试用',
        price: '0',
        period: '/月',
        items: [
          { description: '基础功能与模板' },
          { description: '社区支持' },
          { description: '个人非商业用途' },
        ],
        callToAction: { text: '开始使用', href: '/products' },
      },
      {
        title: '专业',
        subtitle: '适合创作者/小团队',
        price: '19',
        period: '/月',
        items: [
          { description: '解锁高级组件与主题' },
          { description: '优先邮件支持' },
          { description: '商业使用授权' },
        ],
        callToAction: { text: '立即体验', href: '/products/play' },
        hasRibbon: true,
        ribbonTitle: '推荐',
      },
      {
        title: '团队',
        subtitle: '适合企业团队',
        price: '99',
        period: '/月',
        items: [
          { description: '团队协作与权限' },
          { description: '优先级技术支持' },
          { description: '定制化方案咨询' },
        ],
        callToAction: { text: '联系我们', href: '/contact' },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      { variant: 'primary', text: '开启你的创意之旅', href: '/products', icon: 'tabler:rocket' },
    ]}
  >
    <Fragment slot="title">
      AI × Game × Creativity
    </Fragment>

    <Fragment slot="subtitle">
      科技应当温柔，而非冰冷。现在就开始，点亮生活的温度。
    </Fragment>
  </CallToAction>
</Layout>
