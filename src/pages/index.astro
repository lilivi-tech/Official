---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
// import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
// import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Lilivi — 用科技，点亮生活的温度',
  description:
    'Lilivi 致力于用 AI 与游戏的力量，让科技更具人文温度，让创造力回归生活。AI × Game × Creativity',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      { text: '探索产品', href: '/products', variant: 'liquid' },
      { text: '立即体验', href: '/products/play', variant: 'liquid' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Lilivi Hero Image' }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-lilivi-gradient"></div>
    </Fragment>

    <Fragment slot="title">
      用科技，点亮生活<span class="text-warm-light">的温度。</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">AI × Game × Creativity</span>
      <span class="block">让创造力回归生活，让科技更具人文温度。</span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="品牌理念" description="简洁 · 最佳实践 · 高性能 · 有温度的科技" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="特性"
    title="Lilivi 的核心优势"
    subtitle="AI × Game × Creativity：轻盈、快速、可自定义，打造有温度的体验。"
    items={[
      {
        title: 'AI 生成与协作',
        description: '内置多模型能力，支持提示工程、预设与团队协作，创作效率翻倍。',
        icon: 'tabler:sparkles',
      },
      {
        title: '游戏化交互',
        description: '成就、进度与奖励机制融入流程，让产品更有趣、更高转化。',
        icon: 'tabler:confetti',
      },
      {
        title: '极速上线',
        description: '模块化拼装与一键部署，从想法到发布以小时计，快速验证与增长。',
        icon: 'tabler:rocket',
      },
      {
        title: '品牌一致性',
        description: '变量与主题系统统一色彩与字体，在所有触点保持品牌调性。',
        icon: 'tabler:palette',
      },
      {
        title: '可观测与增长',
        description: '内置分析、A/B 实验与事件追踪，数据驱动决策，持续优化体验。',
        icon: 'tabler:chart-line',
      },
      {
        title: '隐私与合规',
        description: '默认即安全，遵循 GDPR/CCPA，支持 Cookie 设定与匿名化分析。',
        icon: 'tabler:shield-lock',
      },
    ]}
  />

  <!-- Blueprint blocks removed as requested -->

  <!-- Steps Widget ****************** -->

  <Steps
    title="产品内核 · 有稳定的技术蓝图"
    items={[
      {
        title: '以人为本的体验哲学',
        description: '以智能感知与情感反馈为核心，保持美学一致性，让每一次交互都被温柔理解。',
        icon: 'tabler:users',
      },
      {
        title: '可持续的创造力引擎',
        description: '模块化与高性能架构支撑全球化适配，从容扩展，让创造力稳健生长。',
        icon: 'tabler:rocket',
      },
      {
        title: '可信赖的数据与安全体系',
        description: '内置隐私保护与数据驱动优化，配合完善反馈机制，构筑值得信赖的产品基础。',
        icon: 'tabler:shield-lock',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget hidden as requested -->

  

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="常见问题"
    subtitle="了解 Lilivi 的能力与使用方式，快速找到你关心的问题答案。"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      { title: '为什么选择 Lilivi？', description: '我们将 AI 与游戏的创造力结合，以温暖的方式服务真实场景。' },
      { title: '如何开始？', description: '访问产品页选择 Play 或 Studio，按照指引体验与上手。' },
      { title: '是否支持移动端？', description: '移动端优化即将发布，敬请期待。' },
      { title: '是否支持暗色主题？', description: '支持，右上角可切换主题。' },
      { title: '如何获取内测资格？', description: '可通过联系我们或关注博客公告获取最新信息。' },
    ]}
  />

  <!-- Stats Widget hidden as requested -->

  

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      { variant: 'primary', text: '开启你的创意之旅', href: '/products', icon: 'tabler:rocket' },
    ]}
  >
    <Fragment slot="title">
      AI × Game × Creativity
    </Fragment>

    <Fragment slot="subtitle">
      科技应当温柔，而非冰冷。现在就开始，点亮生活的温度。
    </Fragment>
  </CallToAction>
</Layout>
