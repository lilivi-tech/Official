---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: '联系 - Lilivi',
  description: '保持联系：我们通常在 24 小时内回复。也可直接邮件至 support@lilivi.com',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="联系" title="保持联系！" />

  <ContactUs
    id="form"
    title="给我们留言"
    subtitle="若需更快获取答案，可先查看常见问题；也可直接联系我们。"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: '姓名',
      },
      {
        type: 'email',
        name: 'email',
        label: '邮箱',
      },
    ]}
    textarea={{
      label: '留言',
    }}
    disclaimer={{
      label: '提交本表单即表示你同意我们出于联系目的收集所填信息。',
    }}
    description="我们通常在 24 小时内回复。也可直接邮件至：support@lilivi.com"
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="我们很乐意提供帮助"
    items={[
      {
        title: '通用支持',
        description: `咨询账户、导航、支付或网站功能相关问题。`,
      },
      {
        title: '商务合作',
        description: '购买、定制、商业授权或具体方案咨询。',
      },
      {
        title: '技术支持',
        description: '安装、编辑、兼容或其他技术问题。',
      },
      {
        title: '邮箱',
        description: 'support@lilivi.com',
        icon: 'tabler:headset',
      },
      {
        title: '公司',
        description: '厦门哩哩唯科技有限公司',
        icon: 'tabler:building',
      },
    ]}
  />
</Layout>
